<mvc:View controllerName="quality.controller.inspection"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <headerContent>
        <Bar id="_IDGenBar2">
            <contentMiddle>
                <Text id="_IDGenText51" text="Inspection List"></Text>
            </contentMiddle>
        </Bar>
    </headerContent>
       <content>
     
     <VBox id="_IDGenVBox1"  alignItems = "Center" alignContent = "Center"  fitContainer = "true">
     <items>
      <Table id="Inspection" items="{/results}">
       <columns>
        <Column id="_IDGenColumn1" class="th">
         <Text id="_IDGenText1" text="Task List Required"></Text>
        </Column>
        <Column id="_IDGenColumn2">
         <Text id="_IDGenText2" text="Plant"></Text>
        </Column>
        <Column id="_IDGenColumn3">
         <Text id="_IDGenText3" text="Task List Type"></Text>
        </Column>
        <Column id="_IDGenColumn4">
         <Text id="_IDGenText4" text="Task List Number"></Text>
        </Column>
        <Column id="_IDGenColumn5">
         <Text id="_IDGenText5" text="SpecSelMaterial"></Text>
        </Column>
        <Column id="_IDGenColumn6">
         <Text id="_IDGenText6" text="System Status"></Text>
        </Column>
        <Column id="_IDGenColumn7">
         <Text id="_IDGenText7" text="Individual Status"></Text>
        </Column>
        <Column id="_IDGenColumn8">
         <Text id="_IDGenText81" text="Object Status"></Text>
        </Column>
        
       </columns>
       <items>
        <ColumnListItem id="_IDGenColumnListItem1">
         <cells>
          <Text id="_IDGenText8" text="{IndTaskListRequired}"></Text>
          <Text id="_IDGenText9" text="{SpecSelPlant}"></Text>
          <Text id="_IDGenText10" text="{TaskListType}"></Text>
          <Text id="_IDGenText11" text="{TaskListNumber}"></Text>
          <Text id="_IDGenText12" text="{SpecSelMaterial}"></Text>
          <Text id="_IDGenText13" text="{SysStatus}"></Text>
          <Text id="_IDGenText14" text="{SyStText}"></Text>
          <Text id="_IDGenText15" text="{SyStDscr}"></Text>
         </cells>
        </ColumnListItem>
       </items>
      </Table>
     </items>
     </VBox>

    </content>
    <footer>
        <Bar id="_IDGenBar1">
        	<contentLeft>
        		<Button id="_IDGenButton1" text="Back" type="Accept" press="back"/>
        	</contentLeft>
            <contentRight>
                <Button id="_IDGenButton2" text="Logout" type="Accept" press="logout"/>
            </contentRight>
        </Bar>
    </footer>
    </Page>
</mvc:View>
